{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.buildhuman/**" }
      ]
    },
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-appdata-read-recursive",
    "fs:allow-home-read-recursive",
    "fs:allow-write-file"
  ]
}
